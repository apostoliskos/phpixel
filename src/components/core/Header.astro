---
import { Icon } from 'astro-icon/components'
const { navData, rightMenu } = Astro.props;
---

<script type="module">
  const bodyElement = document.querySelector('body');
  const menuButton = document.querySelector('#menuButton')
  const navHeader = document.querySelector('#odysseyNavHeader');
  const menuButtonIconHam = document.querySelector('#menuButtonIconHam');
  const menuButtonIconClose = document.querySelector('#menuButtonIconClose');
  let scrollPosition = 0;

  menuButton.addEventListener('click', toggleMenu)

  function toggleMenu() {
    menuButtonIconHam.toggleAttribute('hidden');
    menuButtonIconClose.toggleAttribute('hidden');

    if (navHeader.hasAttribute('mobile-menu-open', true)) {
      menuButton.title = "Open Main Menu"
      // unlock scroll position
      bodyElement.style.removeProperty('overflow');
      bodyElement.style.removeProperty('position');
      bodyElement.style.removeProperty('top');
      bodyElement.style.removeProperty('width');
      window.scrollTo(0, scrollPosition);
    } else {
      menuButton.title = "Close Main Menu"
      // lock scroll position
      scrollPosition = window.pageYOffset;
      bodyElement.style.overflow = 'hidden';
      bodyElement.style.position = 'fixed';
      bodyElement.style.top = `-${scrollPosition}px`;
      bodyElement.style.width = '100%';
    }

    navHeader.toggleAttribute('mobile-menu-open');
  }

  // Mobile dropdown toggles
  document.querySelectorAll('.dropdown-toggle').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation(); // prevent LI hover conflict
      const li = btn.closest('li');
      li.classList.toggle('open');
    });
  });
</script>

<header id="odysseyNavHeader" class={`${rightMenu ? "header--right" : ``.trim()}`}>
  <div class="header-logo-menu__container">
    <button id="menuButton" title="Open Main Menu">
      <span id="menuButtonIconHam">
        <Icon name="ic:baseline-menu" width="24px" height="24px" />
      </span>
      <span id="menuButtonIconClose" hidden>
        <Icon name="ic:baseline-close" width="24px" height="24px" />
      </span>
    </button>
    <a class="header-logo__link" href="/">
      <slot name="logo"></slot>
    </a>
  </div>
  <div class="header-nav__container">
    <slot name="nav">
      {navData && <nav>
        <ul>
          {navData.map(navItem => (
            <li class={navItem.children ? 'has-dropdown' : ''}>
              <div class="dropdown-wrapper">
                <a href={navItem.slug}>
                  {navItem.title.split('<br>').map((line, i) => (
                    <>
                      {line}
                      {i < navItem.title.split('<br>').length - 1 && <br />}
                    </>
                  ))}
                </a>
                {navItem.children && (
                  <button class="dropdown-toggle" type="button">
                    <Icon
                      name="mdi:keyboard-arrow-down"
                      width="18px"
                      height="18px"
                      class="dropdown-arrow"
                    />
                  </button>
                )}
              </div>

              {navItem.children && (
                <ul class="dropdown">
                  {navItem.children.map(child => (
                    <li>
                      <a href={child.slug}>
                        {child.title.split('<br>').map((line, i) => (
                          <>
                            {line}
                            {i < child.title.split('<br>').length - 1 && <br />}
                          </>
                        ))}
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </li>

          ))}
        </ul>
      </nav>}
    </slot>
  </div>
  <div class="header-action-item__container">
    <slot name="action-item"></slot>
  </div>
</header>

<style>
  header {
    width: 100%;
    padding: 1rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    background: #fff;
    z-index: 1;
  }
  header.header--right {
    display: grid;
    grid-template-columns: 1fr auto auto;
  }
  .header-logo__link {
    width: fit-content;
    color: inherit;
    text-decoration: none;
  }
  .header-logo-menu__container {
    display: flex;
    align-items: center;
    z-index: 100;
  }
  .header-action-item__container {
    z-index: 100;
  }
  #menuButton {
    outline: none;
    border: none;
    background-color: transparent;
    margin-right: 0.5rem;
    display: none;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
  }
  #menuButton > span {
    color: var(--theme-on-bg);
    vertical-align: middle;
  }
  nav {
    display: flex;
  }
  nav ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
  }
  nav ul li .dropdown-wrapper {
    margin-right: 1rem;
  }
  nav ul li a {
    text-decoration: none;
    color: inherit;
    opacity: 0.72;
    transition: opacity linear 150ms;
  }
  nav ul li a:hover {
    opacity: 1;
  }

  @media(max-width: 600px) {
    #menuButton {
      display: block;
      z-index: 100;
    }
    .header-nav__container {
      width: 100%;
      height: 100%;
      background-color: var(--theme-bg);
      display: none;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: fixed;
      inset: 0;
      z-index: 99;
    }
    header[mobile-menu-open] .header-nav__container {
      display: flex;
    }
    header[mobile-menu-open] nav ul {
      align-items: center;
      flex-direction: column;
    }
    header[mobile-menu-open] nav ul li {
      font-size: var(--font-size-lg);
      margin-bottom: 1rem;
    }
  }

  /* ——————————— */
  /* Desktop Dropdown */
  /* ——————————— */
  nav {
    ul {
      li {
        position: relative;

        &.has-dropdown {
          a {
            display: flex;
            align-items: center;
            gap: 4px;
          }
        }

        .dropdown {
          display: none;
          position: absolute;
          top: 100%;
          left: 0;
          background: #fff;
          padding: 0.5rem 0;
          list-style: none;
          margin: 0;
          border: 1px solid #eee;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
          z-index: 999;

          li {
            white-space: nowrap;
            padding: 0.3rem 1rem;

            a {
              margin: 0;
              opacity: 1;
              display: block;
            }
          }
        }

        &:hover {
          .dropdown {
            display: block;
          }
        }
      }
    }
  }

  /* Dropdown toggle button */
  .dropdown-toggle {
    border: none;
    background: transparent;
    cursor: pointer;
    padding: 0;
    margin-left: 4px;
    display: flex;
    align-items: center;
  }

  @media(max-width: 600px) {
    /* Disable hover opening on mobile */
    nav ul li:hover .dropdown {
      display: none;
    }

    nav ul li.open .dropdown {
      display: block;
    }

    nav ul li.has-dropdown {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    nav ul li .dropdown {
      position: relative;
      background: transparent;
      border: none;
      box-shadow: none;
      padding-left: 1rem;
    }

    nav ul li .dropdown li {
      padding-left: 1rem;
      margin-bottom: 0.5rem;
    }
  }

  /* Dropdown wrapper keeps text + arrow inline */
  .dropdown-wrapper {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .dropdown-toggle {
    border: none;
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    padding: 0;
    margin: 0;
    transition: transform 0.3s ease;
  }

  /* Rotate arrow when open */
  nav ul li.open .dropdown-toggle .dropdown-arrow {
    transform: rotate(180deg);
  }

  /* Desktop hover dropdown */
  nav ul li:hover .dropdown {
    display: block;
  }

  /* Mobile dropdown smooth transition */
  @media(max-width: 600px) {
    nav ul li .dropdown {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease, opacity 0.3s ease;
      opacity: 0;
    }

    nav ul li.open .dropdown {
      max-height: 500px; /* enough to show all items */
      opacity: 1;
    }

    nav ul li.has-dropdown {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    nav ul li .dropdown li {
      padding-left: 1rem;
      margin-bottom: 0.5rem;
    }
  }



  .dropdown-wrapper a {
    line-height: 44px;
  }
  .dropdown-wrapper a:hover {
    text-decoration: underline !important;
  }
  .dropdown a:hover {
    text-decoration: underline !important;
  }
</style>
