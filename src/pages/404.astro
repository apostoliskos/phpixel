<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<title>404 ‚Äî Page Not Found | PHPixel</title>
	<meta name="description" content="Looks like this pixel wandered off the canvas. Return home or search for what you need." />
	<style>
      :root{
          --bg:#0f1724; /* deep night */
          --card:#0b1220;
          --accent:#6ee7b7; /* mint */
          --muted:#9aa8b2;
          --glass: rgba(255,255,255,0.03);
          --pixel-size: 10px;
          --max-width:1100px;
          font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      }
      *{box-sizing:border-box}
      html,body{height:100%}
      body{
          margin:0;
          min-height:100%;
          display:grid;
          place-items:center;
          background: radial-gradient(1200px 600px at 10% 20%, rgba(110,231,183,0.06), transparent),
          radial-gradient(800px 400px at 90% 80%, rgba(99,102,241,0.04), transparent),
          var(--bg);
          color:#e6eef6;
          -webkit-font-smoothing:antialiased;
          -moz-osx-font-smoothing:grayscale;
          padding:32px;
      }
      .stage{
          width:100%;
          max-width:var(--max-width);
          display:grid;
          grid-template-columns: 1fr 420px;
          gap:28px;
          align-items:center;
      }
      @media (max-width:900px){
          .stage{grid-template-columns:1fr;}
      }

      /* Card */
      .card{
          background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
          border-radius:16px;
          padding:34px;
          box-shadow: 0 6px 30px rgba(2,6,23,0.6), inset 0 1px 0 rgba(255,255,255,0.02);
          border: 1px solid rgba(255,255,255,0.03);
      }

      h1{
          margin:0 0 8px 0;
          font-size:44px;
          line-height:1;
          letter-spacing:-0.02em;
          display:flex;align-items:center;gap:14px;
      }
      .code{font-family:ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", monospace; font-weight:600; font-size:18px; color:var(--accent)}
      p.lead{margin:0 0 18px 0;color:var(--muted)}

      .actions{display:flex;gap:12px;flex-wrap:wrap;margin-top:16px}
      .btn{
          display:inline-flex;align-items:center;gap:10px;padding:10px 14px;border-radius:10px;border:0;cursor:pointer;font-weight:600;
          text-decoration:none;color:var(--bg);background:var(--accent);
          box-shadow: 0 6px 18px rgba(110,231,183,0.12);
      }
      .btn.ghost{background:transparent;color:var(--muted);border:1px solid rgba(255,255,255,0.04)}

      /* Search */
      .search{display:flex;gap:8px;margin-top:18px}
      .search input{flex:1;padding:12px 14px;border-radius:10px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:inherit}

      /* Pixel art area */
      .pixel-stage{
          display:grid;
          grid-template-rows: 1fr auto;
          gap:12px;
          justify-items:center;
          align-items:center;
      }
      .pixel-canvas{
          width:100%;max-width:420px;height:320px;border-radius:12px;padding:18px;background:linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0.02));border:1px solid rgba(255,255,255,0.03);display:flex;align-items:center;justify-content:center;position:relative;overflow:hidden
      }
      .grid{display:grid;grid-template-columns:repeat(42, 1fr);grid-auto-rows:8px;gap:1px;filter:drop-shadow(0 6px 18px rgba(2,6,23,0.6))}
      .cell{width:8px;height:8px;background:transparent;opacity:0.06;border-radius:1px}

      /* animated floating pixel */
      .pixel-bubble{position:absolute;left:18px;top:18px;width:64px;height:64px;border-radius:10px;background:linear-gradient(135deg,var(--accent),#63b3ff);display:grid;place-items:center;color:var(--bg);font-weight:800;transform:rotate(-10deg);box-shadow:0 18px 40px rgba(99,102,241,0.12);animation: float 5s ease-in-out infinite}
      @keyframes float{0%{transform:translateY(0) rotate(-8deg)}50%{transform:translateY(-18px) rotate(2deg)}100%{transform:translateY(0) rotate(-8deg)}}

      footer{display:flex;justify-content:space-between;align-items:center;width:100%;font-size:13px;color:var(--muted);margin-top:8px}

      /* small playful details */
      .logo{display:flex;align-items:center;gap:10px}
      .logo svg{width:34px;height:34px}

      .hint{font-size:13px;color:var(--muted);margin-top:12px}
	</style>
</head>
<body>
<main class="stage">
	<section class="card">
		<div style="display:flex;align-items:center;justify-content:space-between;gap:12px;margin-bottom:8px">
			<div class="logo">
				<!-- simple pixel-logo -->
				<svg viewBox="0 0 48 48" aria-hidden="true" focusable="false">
					<rect x="4" y="4" width="40" height="40" rx="8" fill="#0b1220"></rect>
					<g transform="translate(8,8)">
						<rect width="10" height="10" fill="#6ee7b7"></rect>
						<rect x="12" width="10" height="10" fill="#63b3ff"></rect>
						<rect y="12" width="10" height="10" fill="#ffd166"></rect>
						<rect x="12" y="12" width="10" height="10" fill="#ff7ab6"></rect>
					</g>
				</svg>
				<div style="line-height:1">
					<div style="font-weight:700">PHPixel</div>
					<div style="font-size:12px;color:var(--muted)">pixel-first dev & design</div>
				</div>
			</div>
			<div style="text-align:right;color:var(--muted);font-size:12px">Error code <span class="code">404</span></div>
		</div>

		<h1>
			<span style="font-size:22px;color:var(--muted);font-weight:600">Oops ‚Äî</span>
			Page lost in the canvas
		</h1>
		<p class="lead">The page you were looking for took a wrong turn between pixels and pushed off the grid. Let's get you back to solid ground.</p>

		<div class="actions">
			<a class="btn" href="/">üè† Return home</a>
			<a class="btn ghost" href="/contact">‚úâÔ∏è Contact support</a>
			<button id="random" class="btn ghost">üé≤ Surprise me</button>
		</div>

		<div class="search">
			<input id="search" placeholder="Search the site (try: 'shop', 'services', 'portfolio')" aria-label="Search site" />
			<button class="btn" id="searchBtn">üîé</button>
		</div>

		<div class="hint">Tip: You can also try visiting the <a href="/sitemap.xml" style="color:var(--accent);text-decoration:underline">sitemap</a> to explore the site.</div>

		<footer>
			<div>Need help? <a href="/docs" style="color:var(--accent)">Docs</a></div>
			<div>&copy; <span id="year"></span> PHPixel</div>
		</footer>
	</section>

	<aside class="pixel-stage">
		<div class="card pixel-canvas" aria-hidden="true">
			<div class="pixel-bubble">PX</div>
			<div id="pixelGrid" class="grid" style="width:100%;height:100%;max-width:380px;max-height:280px;">
				<!-- cells created by JS -->
			</div>
		</div>
		<div style="text-align:center;color:var(--muted);font-size:13px">A playful pixel report ‚Äî click any cell to re-draw.</div>
	</aside>
</main>

<script>
	// small utilities
	document.getElementById('year').textContent = new Date().getFullYear();

	// Pixel grid generation
	const grid = document.getElementById('pixelGrid');
	const cols = 42; const rows = 35; // keep reasonable

	function makeCell(i,j){
		const c = document.createElement('div');
		c.className='cell';
		c.dataset.x=i; c.dataset.y=j;
		c.addEventListener('click', ()=> recolor(c));
		return c;
	}

	for(let r=0;r<rows;r++){
		for(let c=0;c<cols;c++){
			grid.appendChild(makeCell(c,r));
		}
	}

	const palette = ['#6ee7b7','#63b3ff','#ffd166','#ff7ab6','#f87171','#60a5fa','#c084fc'];

	function randomPalette(){
		return palette[Math.floor(Math.random()*palette.length)];
	}

	function recolor(cell){
		cell.style.background = randomPalette();
		cell.style.opacity = 1;
		// ripple effect
		cell.animate([{transform:'scale(0.9)'},{transform:'scale(1)'}],{duration:240,easing:'cubic-bezier(.2,.8,.2,1)'});
	}

	// initial art: draw a simple PX logo
	function drawLogo(){
		// clear
		grid.querySelectorAll('.cell').forEach(s=>{s.style.background='transparent';s.style.opacity=0.06});
		// sample pattern (very small) center
		const centerX = Math.floor(cols/2)-1;
		const centerY = Math.floor(rows/2)-1;
		const coords = [
			[0,0,'#6ee7b7'], [1,0,'#63b3ff'], [2,0,'#ffd166'],
			[0,1,'#ff7ab6'], [1,1,'#6ee7b7'], [2,1,'#63b3ff'],
			[0,2,'#ffd166'], [1,2,'#ff7ab6'], [2,2,'#6ee7b7']
		];
		coords.forEach(([dx,dy,col])=>{
			const x = centerX+dx-1; const y = centerY+dy-1;
			const idx = y*cols + x;
			const cell = grid.children[idx];
			if(cell){ cell.style.background = col; cell.style.opacity = 1 }
		})
	}
	drawLogo();

	// Randomize button
	document.getElementById('random').addEventListener('click', ()=>{
		grid.querySelectorAll('.cell').forEach(s=>{
			if(Math.random()>0.85) {s.style.background = randomPalette(); s.style.opacity = 1}
			else {s.style.background='transparent'; s.style.opacity=0.06}
		});
	});

	// Search faux handler
	document.getElementById('searchBtn').addEventListener('click', ()=>{
		const q = document.getElementById('search').value.trim();
		if(!q) {
			alert('Try searching for terms like "portfolio", "blog" or "services".');
			return;
		}
		// naive redirect pattern: /search?q=...
		const url = '/search?q=' + encodeURIComponent(q);
		window.location.href = url;
	});

	// Keyboard convenience: Enter to search
	document.getElementById('search').addEventListener('keydown', (e)=>{ if(e.key==='Enter') document.getElementById('searchBtn').click(); });
</script>
</body>
</html>
